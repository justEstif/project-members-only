extends layout

block content
  div(class="flex flex-col gap-5")
    h1(class="text-nord15 text-5xl")= title

  if error
    p Error getting content.
  else
    p(class="flex flex-col gap-10 my-10 text-nord11") All fields marked with * are required
    form(method='POST' action='' autocomplete="off")
      div(class="flex flex-col gap-10 my-10 text-nord11")

        div.form-group(class="flex max-w-lg w-full justify-between gap-5")
          label(for='email' class="capitalize text-lg ") Email*:
          input#email.form-control(type='email' required placeholder='Email' class="text-right px-3 bg-nord0 border border-nord6" name='email' value=(undefined===user ? '' : user.email) )

        div.form-group(class="flex max-w-lg w-full justify-between gap-5")
          label(for='password' class="capitalize text-lg ") Password*:
          input#password.form-control(type='password' required placeholder='Password' class="text-right px-3  bg-nord0 border border-nord6" name='password' value=(undefined===user ? '' : user.password) )

      button.btn.btn-primary(type='submit' class="px-6 py-2.5 bg-nord3 hover:bg-nord10 text-white font-medium text-xs leading-tight") Submit

  if errors
    ul(class="mt-4 text-red-500 flex flex-col gap-5")
      for error in errors
        li!= error.msg
